{% extends "AppBundle::layoutAdmin.html.twig" %}

{% block title %}Rejeter une observation{% endblock %}

{% block body %}
    <h2 class="center">Rejeter une observation</h2><hr>
    {{ form_start(form) }}
    <div class="well">
        <div class="form-group">
            {{ form_label(form.rejectMessage, "Description du rejet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.rejectMessage) }}
            <div class="col-sm-10">
                {{ form_widget(form.rejectMessage, {'attr': {'class': 'form-control'}}) }}
                <p>Ce message sera envoyé à l'auteur de cette observation.</p>
            </div>
        </div>
        <br>
        <p>Etes-vous certain de vouloir rejeter cette observation "#{{ observation.id }} - {{ observation.title }}" ?<br></p>
        <a href="{{ path('admin') }}" class="btn btn-default">Retour au tableau de bord</a>
        <input type="submit" value="Rejeter" class="btn btn-danger" />
        {{ form_end(form) }}
    </div>

{% endblock %}