{% extends "AppBundle::layout.html.twig" %}

{% block title %}Editer une observation{% endblock %}

{% block body %}
    <h2 class="center">Editer une observation</h2><hr>

    <div class="container">
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.title, "Titre", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.title) }}
            <div class="col-sm-10">
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.dateObservation, "Date d'observation", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.dateObservation) }}
            <div class="col-sm-10">
                <div class='input-group date'>
                    {{ form_widget(form.dateObservation, {'attr': {'class': 'form-control'}}) }}
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>
            </div>
        </div>



        <div class="form-group">
            {{ form_label(form.gpsLatitude, "GPS Latitude", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.gpsLatitude) }}
            <div class="col-sm-10">
                {{ form_widget(form.gpsLatitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.gpsLongitude, "GPS Longitude", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.gpsLongitude) }}
            <div class="col-sm-10">
                {{ form_widget(form.gpsLongitude, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.description) }}
            <div class="col-sm-10">
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.image) }}
            <div class="col-sm-10">
                {{ form_widget(form.image) }}
                <p><br>
                    {% if observation.image != null  %}
                        <img id="image_choice" class="image_obs" src="{{ asset('uploads/images/' ~ observation.image.filename) }}" title="{{ observation.espece.lbNom }}" alt="{{ observation.espece.lbNom }}" />
                    {% else %}
                        <img id="image_choice" class="image_obs" src="{{ asset('uploads/images/imgDefaut.png') }}" title="Image par defaut" alt="Image par defaut" />
                    {% endif %}
                </p>
            </div>
        </div>
        <a href="{{ path('view_my_observation', { 'page' : 1 }) }}" class="btn btn-default">Retour Ã  mes observations</a>
        <input type="submit" value="Valider" class="btn btn-danger" />
        {{ form_end(form) }}
    </div>
    </div>

{% endblock %}


