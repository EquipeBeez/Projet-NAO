<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Derni√®res Observations</h3>
    </div>
    <div class="panel-body">

            {% for listLastObservation in listLastObservations %}
                <p class="center">
                    <a href="{{ path('view_one_observation', {'id': listLastObservation.id}) }}">
                        {% if listLastObservation.image != null  %}
                            <img class="image_obs" src="{{ asset('uploads/images/' ~ listLastObservation.image.filename) }}" title="{{ listLastObservation.espece.lbNom }}" alt="{{ listLastObservation.espece.lbNom }}" />
                        {% else %}
                            <img class="image_obs" src="{{ asset('uploads/images/imgDefaut.png') }}" title="Image par defaut" alt="Image par defaut" />
                        {% endif %}
                        <br>
                        {{ listLastObservation.title | truncate(50, false, '...') }}
                    </a>
                </p>
            {% endfor %}
    </div>
</div>


